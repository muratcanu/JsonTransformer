{
    "id": "section1",
    "type": "container",
    "settings": {
        "width": "full",
        "padding": {
            "desktop": {
                "top": "20px",
                "right": "0px",
                "bottom": "20px",
                "left": "0px"
            },
            "tablet": {
                "top": "10px",
                "right": "0px",
                "bottom": "10px",
                "left": "0px"
            },
            "mobile": {
                "top": "5px",
                "right": "0px",
                "bottom": "5px",
                "left": "0px"
            }
        },
        "animation": {
            "type": "fadeIn",
            "duration": 1000,
            "delay": 200
        },
        "customCSS": {
            "styles": ".elementor-widget-heading { text-shadow: 2px 2px #ff0000; }",
            "classes": [
                "my-custom-class",
                "another-class"
            ]
        }
    },
    "children": [
        {
            "id": "column1",
            "type": "column",
            "settings": {
                "width": "50%",
                "margin": {
                    "mobile": {
                        "top": "0%",
                        "right": "10%",
                        "bottom": "0%",
                        "left": "10%"
                    }
                }
            },
            "children": [
                {
                    "id": "widget1",
                    "type": "heading",
                    "settings": {
                        "textAlign": "center"
                    },
                    "content": "Hello World",
                    "dynamic": {
                        "content": {
                            "source": "post",
                            "field": "title"
                        }
                    }
                }
            ]
        }
    ]
